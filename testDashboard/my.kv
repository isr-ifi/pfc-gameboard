<Button>
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (.05, .5, 1, 1) if self.disabled == False else (.05, .5, 1, 0.5)
    color: (0,0,0,1)
    on_press: self.back_color = .05, .5, 1, .5
    on_release: self.back_color = .05, .5, 1, 1
<RoundButton@Button>
    border_radius: dp(18)
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(18),dp(18),dp(18),dp(18)]
<BorderButton@Button>
    border_radius: dp(18)
    color: self.back_color
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2
<Spinner@Button>
    on_release: self.back_color = .05, .5, 1, 1
    border_radius: dp(12)
    color: self.back_color
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2
<Label>
    font_size: dp(20)
<TextInput>
    multiline: False
    background_color: (0,0,0,0)
    background_normal: ''
    font_size: dp(20)
    cursor_color: (.05, .5, 1, 1)
    #left, right
    padding_x: [self.width*0.05,self.width*0.05]
    #top, bottom
    padding_y: [self.height/2.0 - (self.line_height/2.0)*len(self._lines), 0]
    canvas.before:
        Color:
            rgba: (.05, .5, 1, 1) if self.disabled == False else (.05, .5, 1, 0.5)
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], dp(18))
            width: 1.2

WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:

<MainWindow>:
    name: "main"
    GridLayout:
        cols:1
        rows:3
        size: root.width, root.height

        GridLayout:
            canvas.before:
                Color:
                    rgba: 0,0,0,0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: root.height * 0.1
            cols: 3
            GridLayout:
                cols:1
                size_hint_x: None
                width: self.parent.width * 0.25
                Image:
                    keep_ratio: True
                    allow_stretch: True
                    source: 'assets/uzh_logo.png'
            Label:
                color: 0,0,0,1
                size_hint_x: None
                width: self.parent.width * 0.50
                text: "PFC API Call Specification"
            GridLayout:
                padding: [10,10,10,10]
                cols: 1
                width: self.parent.width * 0.25
                size_hint_x: None
                height: self.parent.height
                size_hint_y: None
                Spinner:
                    id: port_dropdown
                    text: 'Select device...'
                    on_press:
                        root.update_ports()
                        self.back_color = .05, .5, 1, .5
                    on_text:
                        root.select_port(self.text)

        GridLayout:
            size_hint_y:None
            height: root.height * 0.45
            cols:3
            height: root.height * 0.8
            size_hint_y: None
            GridLayout:
                width: root.width * 0.25
                size_hint_x: None
                height: self.parent.height * 0.8
                size_hint_y: None
            GridLayout:
                width: root.width * 0.5
                size_hint_x: None
                height: self.parent.height * 1
                size_hint_y: None
                rows:2
                TextInput:
                    id: input
                    hint_text: 'specify api call here'
                BorderButton:
                    text: 'stage'
                    on_release: root.stage(root.ids.input.text)
            GridLayout:
                width: root.width * 0.25
                size_hint_x: None
                height: self.parent.height * 0.8
                size_hint_y: None

        GridLayout:
            cols:3
            width: root.width
            size_hint_x: None
            size_hint_y: None
            height: root.height * 0.1
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                padding: [10,10,10,10]
                cols: 1
                width: self.parent.width * 0.25
                size_hint_x: None
                height: self.parent.height * 1
                size_hint_y: None
                BorderButton:
                    id: restart
                    #disabled: True
                    text: 'Load current format'
                    on_press:
                        root.reset_call_format()
            GridLayout:
                width: self.parent.width * 0.5
                size_hint_x: None
                height: self.parent.height * 1
                size_hint_y: None
            GridLayout:
                padding: [10,10,10,10]
                cols: 1
                width: self.parent.width * 0.25
                size_hint_x: None
                height: self.parent.height * 1
                size_hint_y: None
                BorderButton:
                    id: restart
                    #disabled: True
                    text: 'Oracle'
                    on_release:
                        app.root.current = "second"
                        root.manager.transition.direction = 'left'





<SecondWindow>:
    name: "second"
    GridLayout:
        cols:2
        width: root.width
        size_hint_x: None
        height: root.height
        size_hint_y: None
        RoundButton:
            text: "Main"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = 'right'
        RoundButton:
            text: "Third"
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = 'left'


<ThirdWindow>:
    name: "third"
    GridLayout:
        cols:3
        width: root.width
        size_hint_x: None
        height: root.height
        size_hint_y: None
        RoundButton:
            text: "Second"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = 'right'
        Label:
            text: 'third window'
        RoundButton:
            text: "Main"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = 'left'






