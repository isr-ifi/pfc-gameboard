<Button>
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (.05, .5, 1, 1) if self.disabled == False else (.05, .5, 1, 0.5)
    color: (0,0,0,1)
    on_press: self.back_color = .05, .5, 1, .5
<RoundButton@Button>
    border_radius: dp(18)
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(18),dp(18),dp(18),dp(18)]
<BorderButton@Button>
    border_radius: dp(18)
    color: self.back_color
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2
<Spinner@Button>
    on_release: self.back_color = .05, .5, 1, 1
    border_radius: dp(12)
    color: self.back_color
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2
<Label>
    font_size: dp(20)
<TextInput>
    background_color: (0,0,0,0)
    background_normal: ''
    font_size: self.height*0.5
    cursor_color: 0, 0, 0, 1
    padding_x: [self.width*0.1,self.width*0.1]
    canvas.before:
        Color:
            rgba: (.05, .5, 1, 1) if self.disabled == False else (.05, .5, 1, 0.5)
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], dp(18))
            width: 1.2




<MyGrid>
    GridLayout:
        cols:1
        rows:3
        size: root.width, root.height

        GridLayout:
            canvas.before:
                Color:
                    rgba: 0,0,0,0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: root.height * 0.1
            cols:3
            GridLayout:
                cols:1
                size_hint_x: None
                width: self.parent.width * 0.25
                Image:
                    keep_ratio: True
                    allow_stretch: True
                    source: 'assets/uzh_logo.png'
            Label:
                color: 0,0,0,1
                size_hint_x: None
                width: self.parent.width * 0.50
                text: "PFC Training Dashboard"
            GridLayout:
                padding: [10,10,10,10]
                cols: 1
                width: self.parent.width * 0.25
                size_hint_x: None
                height: self.parent.height
                size_hint_y: None
                Spinner:
                    id: port_dropdown
                    text: 'Select device...'
                    on_press:
                        root.update_ports()
                        self.back_color = .05, .5, 1, .5
                    on_text:
                        root.select_port(self.text)

        GridLayout:
            cols: 3
            height: root.height * 0.8
            size_hint_y: None
            GridLayout:
                width: root.width * 0.25
                size_hint_x: None
                height: self.parent.height * 0.8
                size_hint_y: None
            GridLayout:
                height: root.height * 0.8
                size_hint_y: None
                width: root.width * 0.5
                size_hint_x: None
                rows: 7
                Label:
                    height: self.parent.height * 0.1
                    size_hint_y: None
                RoundButton:
                    height: self.parent.height * 0.1
                    size_hint_y: None
                    disabled: False
                    id: start_training
                    disabled: True
                    text: "Start Training"
                    on_press: root.start_training()
                Label:
                    id: instructions
                    height: self.parent.height * 0.4
                    size_hint_y: None
                    text: 'Press "Start Training"'
                    color: (0, 0, 0, 1)
                GridLayout:
                    padding: [0,10,0,10]
                    cols: 3
                    height: self.parent.height * 0.1
                    size_hint_y: None
                    TextInput:
                        id: area_name
                        multiline: False
                        width: self.parent.width * 0.6
                        size_hint_x: None
                        hint_text: 'Enter your area name here'
                        disabled: True
                    Label:
                        width: self.parent.width * 0.1
                        size_hint_x: None
                    BorderButton:
                        id: submit_name
                        width: self.parent.width * 0.3
                        size_hint_x: None
                        text: 'Submit'
                        disabled: True
                        on_press: root.submit_area_name(area_name.text)
                Label:
                    height: self.parent.height * 0.1
                    size_hint_y: None
                RoundButton:
                    height: self.parent.height * 0.1
                    size_hint_y: None
                    disabled: True
                    id: upload
                    text: "Upload to Board"
                    on_press: root.upload()
                Label:
                    height: self.parent.height * 0.1
                    size_hint_y: None
            GridLayout:
                width: root.width * 0.25
                size_hint_x: None
                height: root.height * 0.8
                size_hint_y: None
                rows: 2
                # Show/Hide Log checkbox
                CheckBox:
                    height: self.parent.height * 0.1
                    size_hint_y: None
                    id: chk
                    on_press: root.toggle_log(self.active)
                    color: 0.5,0.5,0.5,1
                GridLayout:
                    cols: 1
                    padding: [10,0,0,0]
                    ScrollView:
                        do_scroll_x: False
                        do_scroll_y: True
                        Label:
                            id: log
                            width: root.width * 0.25
                            size_hint_x: None
                            size_hint_y: None
                            text_size: self.width, None
                            height: self.texture_size[1]
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 0.5
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos


        GridLayout:
            cols:1
            width: root.width
            size_hint_x: None
            size_hint_y: None
            height: root.height * 0.1
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                padding: [10,10,10,10]
                cols: 1
                width: self.parent.width * 0.25
                size_hint_x: None
                height: self.parent.height * 1
                size_hint_y: None
                BorderButton:
                    id: restart
                    disabled: True
                    text: 'Cancel Training'
                    on_press:
                        root.restart_training()


