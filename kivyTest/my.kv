<Button>
    background_normal: ''
    background_down: ''
    background_color: .05, .5, 1, 1

<MyGrid>
    saf: start_and_finish
    upld: upload

    GridLayout:
        cols:1
        rows:2
        size: root.width, root.height

        GridLayout:

            canvas.before:
                Color:
                    rgba: .25, .25, .25, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


            size_hint_y: None
            height: self.parent.height * 0.1
            cols:3
            Image:
                size_hint_x: None
                width: 250
                source: 'assets/empa_logo.png'

            Label:
                text: "Game Board Training Dashboard"
            Spinner:
                size_hint_x: None
                width: 400
                id: port_dropdown
                height: self.parent.height
                pos_hint: {'center': (.5, .5)}
                text: 'Select device'
                on_press: root.update_ports()
                on_text: root.select_port(self.text)

        GridLayout:
            rows: 8
            RelativeLayout:
                Button:
                    height: 100
                    size_hint: .5, None
                    pos_hint: {'x': .25}
                    disabled: True
                    id: start_and_finish
                    text: "Start Training"
                    on_press: root.start_finish_training()
            Label:
                text: "1. Select the correct Port in the top right"
                color: (0, 0, 0, 1)
            Label:
                text: "2. Press 'Start Training'"
                color: (0, 0, 0, 1)

            Label:
                text: "3. Play a card on each area in alphabetical order"
                color: (0, 0, 0, 1)
            Label:
                text: "4. Play a card on the Oracle"
                color: (0, 0, 0, 1)
            Label:
                text: "5. Press 'Finish Training'"
                color: (0, 0, 0, 1)
            Label:
                text: "6. Press 'Upload to Board'"
                color: (0, 0, 0, 1)
            #Upload button

            RelativeLayout:
                Button:
                    height: 100
                    size_hint: .5, None
                    pos_hint: {'x': .25, 'y': .25}
                    disabled: True
                    id: upload
                    text: "Upload to Board"
                    on_press: root.upload()
